@using MachineInfo.Models
@model IEnumerable<MachineCensor>

<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta charset="UTF-8">
<head>
    <title>장치 정보 보기</title>
 
<style>


body { font-family: "맑은 고딕체", "맑은 고딕체" }
h1 { font-family: "맑은 고딕체" }

#topBanner {
    
       margin-top:10px;
       margin-bottom:10px;
       max-width: 500px;
       height: auto;
       display: block; margin: 0 auto;
      
       
}

.InfoTable {
      border-collapse: collapse;
      border-top: 3px solid #000000;
      width: 800px;  
      margin-left: auto; margin-right: auto;
      background-image: linear-gradient(120deg, #fdfbfb 0%, #ebedee 100%);
    }  
    .InfoTable th {
      color: #ffff00;
      background: #f0f6f9;
      background-image: linear-gradient(to top, #dbdcd7 0%, #dddcd7 24%, #e2c9cc 30%, #e7627d 46%, #b8235a 59%, #801357 71%, #3d1635 84%, #1c1a27 100%);
      text-align: center;
    }
    .InfoTable th, .InfoTable td {
      padding: 10px;
      border: 1px solid #ddd;
      text-align: center;
    }
    .InfoTable th:first-child, .InfoTable td:first-child {
      border-left: 0;
    }
    .InfoTable th:last-child, .InfoTable td:last-child {
      border-right: 0;
    }
    .InfoTable tr td:first-child{
      text-align: center;
    }
    .InfoTable caption{caption-side: top; }


</style>


</head>
linear-gradient(to right, #fa709a 0%, #fee140 100%);
 <body style="background-color:BLACK;">


}

 
<img id="topBanner" src ="/jpg/blackhole.gif" title="Black Hole" >


<h1 style="text-align: center;"><span style = "color:#EAEAEA"> Machine Information Grid</span></h1>

<table class="InfoTable">
    <caption style="text-align: right; font-weight:900"><span style = "color:#EAEAEA">기준 일자 : @DateTime.Now</span></caption>
    <tr>
        <th>기계명</th>
        <th>관리자</th>
        <th>온도</th>
        <th>전력사용량</th>
        <th>운전 시간</th>
    </tr>


    @foreach(MachineCensor machine in Model)
    {
        <tr>
            <td>@machine.machineName</td>
            <td>@machine.managerName</td>
            <td>@machine.temperature</td>
            <td>@machine.power</td>
            <td>@machine.runTime</td>        
        </tr>
    }
 
</table>
    
</body>